<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="130dp"
        android:layout_height="70dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/wisma"
        tools:srcCompat="@drawable/wisma" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:text="Untuk Anda"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageView2" />

    <ImageView
        android:id="@+id/imgProduk"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView"
        app:srcCompat="@color/design_default_color_primary"
        tools:srcCompat="@android:color/holo_purple" />

    <TextView
        android:id="@+id/txProduk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:text="Siger Sunda"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/imgProduk"
        app:layout_constraintTop_toTopOf="@id/imgProduk" />

    <TextView
        android:id="@+id/txHarga"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:text="Rp. 5.000.000,00"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/imgProduk"
        app:layout_constraintTop_toBottomOf="@id/txProduk" />

    <TextView
        android:id="@+id/txToko"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:text="SeMUA Evelyn"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/imgProduk"
        app:layout_constraintTop_toBottomOf="@id/txHarga" />

    <Button
        android:id="@+id/btnPesan"
        android:layout_width="95dp"
        android:layout_height="40dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="215dp"
        android:layout_marginEnd="30dp"
        android:backgroundTint="#385A7F"
        android:text="Pesan"
        android:textAlignment="center"
        android:textSize="14sp"
        app:cornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txToko"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="410dp"
        android:layout_height="60dp"
        android:background="@color/material_dynamic_primary40"
        app:backgroundTint="#385A7F"
        app:elevation="10dp"
        app:itemBackground="@null"
        app:itemIconSize="35dp"
        app:itemIconTint="@color/white"
        app:labelVisibilityMode="selected"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/menu_bottom" />

</androidx.constraintlayout.widget.ConstraintLayout>
