<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="130dp"
        android:layout_height="70dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@drawable/wisma" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="Untuk Anda"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="87dp" />

    <ImageView
        android:id="@+id/imgProduk"
        android:layout_width="135dp"
        android:layout_height="95dp"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="126dp"
        tools:srcCompat="@android:color/holo_purple" />

    <TextView
        android:id="@+id/txProduk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:text="Siger Sunda"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/imgProduk"
        tools:layout_editor_absoluteY="127dp" />

    <TextView
        android:id="@+id/txHarga"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:text="Rp. 5.000.000,00"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/imgProduk"
        app:layout_constraintTop_toBottomOf="@+id/txProduk" />

    <TextView
        android:id="@+id/txToko"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="13dp"
        android:text="SeMUA Evelyn"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/imgProduk"
        app:layout_constraintTop_toBottomOf="@+id/txHarga" />

    <Button
        android:id="@+id/btnPesan"
        android:layout_width="95dp"
        android:layout_height="40dp"
        android:layout_marginEnd="20dp"
        android:backgroundTint="#385A7F"
        android:text="Pesan"
        android:textSize="14sp"
        app:cornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="181dp" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="420dp"
        android:layout_height="60dp"
        android:textAlignment="center"
        app:itemBackground="@color/material_dynamic_primary40"
        app:itemIconTint="@color/white"
        app:labelVisibilityMode="selected"
        app:menu="@menu/menu_bottom"
        tools:layout_editor_absoluteX="-5dp"
        tools:layout_editor_absoluteY="678dp" />
</androidx.constraintlayout.widget.ConstraintLayout>