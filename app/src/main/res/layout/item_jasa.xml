<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageJasa"
        android:layout_width="90dp"
        android:layout_height="104dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="10dp"
        android:clickable="false"
        android:focusable="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tx_judul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="13dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="13dp"
        android:text="TextView"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/tx_harga"
        app:layout_constraintStart_toEndOf="@+id/imageJasa"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tx_harga"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:layout_marginTop="10dp"
        android:text="TextView"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/imageJasa"
        app:layout_constraintTop_toBottomOf="@+id/tx_judul" />

    <TextView
        android:id="@+id/tx_namapj"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:layout_marginTop="8dp"
        android:text="TextView"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/imageJasa"
        app:layout_constraintTop_toBottomOf="@+id/tx_harga" />

    <Button
        android:id="@+id/buttonPesan"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="8dp"
        android:backgroundTint="#385A7F"
        android:textColor="#FFFFFF"
        app:cornerRadius="5dp"
        app:icon="@android:drawable/ic_menu_info_details"
        app:iconTint="@color/white"
        app:layout_constraintEnd_toStartOf="@+id/buttonMaps"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonMaps"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="20dp"
        android:backgroundTint="#385A7F"
        app:cornerRadius="5dp"
        app:icon="@android:drawable/ic_dialog_map"
        app:iconTint="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>